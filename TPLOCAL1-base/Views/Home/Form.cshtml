@using TPLOCAL1.Models
@model Formulaire
<head>
    <link rel="stylesheet" href="~/resources/Form.css" />
    <title>Formulaire</title>
</head>

<body>
    <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
    <header>
        <h1>Formulaire</h1>
    </header>

    <br>

    <nav>
        <ul>
            <li><a href="/Home/Index/Index">Accueil</a></li>
            <li><a href="/Home/Index/AvisList">Liste des avis</a></li>
        </ul>
    </nav>

    <section>
        <form asp-controller="ValidationFormulaire" asp-action="Validation" method="post">
        <table class="tg">
            <thead>
                <tr>
                    <th colspan="2">Informations personnelles</th>
                </tr>
            </thead>
            <tbody>
            
                <tr>
                    <td>Nom</td>
                    <td><input type="text" id="nom" asp-for="Nom"></td>
                </tr>
                <tr>
                    <td>Prénom</td>
                        <td><input type="text" id="nom" asp-for="Prenom"></td>
                </tr>
                <tr>
                    <td>Sexe</td>
                    <td>
                        <select id="sexe" asp-for="Sexe">
                            <option value="selectionSexe">Selectionner un sexe</option>
                            <option value="homme">Homme</option>
                            <option value="femme">Femme</option>
                            <option value="autresexe">Autre</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td><input type="text" id="adresse" asp-for="Adresse"></td>
                </tr>
                <tr>
                    <td>Code postal</td>
                        <td><input type="text" id="code" asp-for="Code"></td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td><input type="text" id="ville" asp-for="Ville"></td>
                </tr>
                <tr>
                    <td>Adresse mail</td>
                        <td><input type="text" id="mail" asp-for="Mail"></td>
                </tr>
            </tbody>
        </table>

        <table class="tg">
            <thead>
                <tr>
                    <th colspan="2">Informations sur la formation suivie</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Date de début de formation</td>
                    <td><input type="date" id="dateDebut" asp-for="DateDebut"></td>
                </tr>
                <tr>
                    <td>Formation suivie</td>
                    <td>
                        <select id="formation" asp-for="Formation">
                            <option value="selectionFormation">Selectionner une formation</option>
                            <option value="COBOL">Formation COBOL</option>
                            <option value="CSharp">Formation C#</option>
                            <option value="autreformation">Autre formation</option>
                        </select>
                    </td>
                </tr>
            </tbody>
        </table>

        <table class="tg">
            <thead>
                <tr>
                    <th colspan="2">Avis sur la formation</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Formation COBOL</td>
                    <td><input type="text" id="avisCOBOL" asp-for="AvisCOBOL"></td>
                </tr>
                <tr>
                    <td>Formation C#</td>
                    <td><input type="text" id="avisCSharp" asp-for="AvisCSharp"></td>
                </tr>
            </tbody>
        </table>
        </form>
        <button type="button"><a href="/Home/Index/Validation">Valider</a></button>
    </section>

</body>
